{
  "name": "wordpack",
  "version": "1.1.0",
  "description": "a wordpress theme boilerplate with webpack",
  "main": "src/js/homepage.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel watch:vite watch:images",
    "watch:vite": "vite",
    "watch:images": "node ./wordpack/image.config.js --watch",
    "prod": "npm-run-all --parallel prod:vite prod:images",
    "prod:vite": "vite build",
    "prod:images": "node ./wordpack/image.config.js",
    "critical": "node ./wordpack/critical.config.js",
    "zip": "node ./wordpack/archiver.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnzoEmb/wordpack.git"
  },
  "author": "Enzo Vergara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EnzoEmb/wordpack/issues"
  },
  "homepage": "https://github.com/EnzoEmb/wordpack#readme",
  "devDependencies": {
    "archiver": "^5.2.0",
    "chalk": "^2.4.2",
    "chokidar": "^3.5.1",
    "npm-run-all": "^4.1.5",
    "postcss-load-config": "^3.0.1",
    "postcss-nested": "^5.0.3",
    "puppeteer": "^7.0.1",
    "sass": "^1.32.8",
    "sharp": "^0.27.1",
    "vite": "^2.0.1"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "jquery": "^3.5.1",
    "swiper": "^6.4.10"
  }
}
